<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LaunchButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="VoterInfoDate">
        <item name="android:layout_margin">@dimen/medium_padding</item>
    </style>

    <style name="VoterInfoHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
    </style>


</resources>
