<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RepresentativeTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="RepresentativeButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RepresentativePlaceholder">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ElectionHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="VoterInfoDate">
        <item name="android:layout_margin">@dimen/medium_padding</item>
    </style>

    <style name="VoterInfoHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
    </style>

    <style name="ProfileImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <style name="Representative">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
    </style>

    <style name="SocialIcons">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

</resources>
